[Unit]
Description=Monitoring Server API
After=network.target

[Service]
Type=simple
User=iroc3ll
WorkingDirectory=/var/www/backend
ExecStart=/var/www/backend/venv/bin/python /var/www/backend/api-monitoring-server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
Environment=PYTHONPATH=/var/www/backend

[Install]
WantedBy=multi-user.target